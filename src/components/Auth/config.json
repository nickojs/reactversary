{
  "signup": {
    "meta": {
      "name": "Cadastro",
      "icon": "account"
    },
    "inputs": {
      "fullname": {
        "name": "name",
        "type": "text",
        "id": "name",
        "label": "Nome",
        "placeholder": "Nome completo",
        "rules": {
          "required": "true",
          "isLength": {
            "min": 4
          }
        }
      },
      "email": {
        "name": "email",
        "type": "email",
        "id": "email",
        "label": "E-mail",
        "placeholder": "seu@email.com",
        "rules": {
          "required": "true",
          "pattern": "/[^@]+@[^\\.]+\\..+/g"
        }
      },
      "password": {
        "name": "password",
        "type": "password",
        "id": "password",
        "label": "Senha",
        "placeholder": "Crie uma senha...",
        "rules": {
          "required": "true",
          "isLength": {
            "min": 8,
            "max": 20
          }
        }
      },
      "confirmPassword": {
        "name": "confirmPassword",
        "type": "password",
        "id": "confirmPassword",
        "label": "Confirmar Senha",
        "placeholder": "Confirme a senha",
        "rules": {
          "required": "true",
          "isLength": {
            "min": 8,
            "max": 20
          }
        }
      }
    }
  },
  "login": {
    "meta": {
      "name": "Login",
      "icon": "login"
    },
    "inputs": {
      "email": {
        "name": "email",
        "type": "email",
        "id": "email",
        "label": "E-mail",
        "placeholder": "seu@email.com",
        "rules": {
          "required": "true",
          "pattern": "/[^@]+@[^\\.]+\\..+/g"
        }
      },
      "password": {
        "name": "password",
        "type": "password",
        "id": "password",
        "label": "Senha",
        "placeholder": "Crie uma senha...",
        "rules": {
          "required": "true",
          "isLength": {
            "min": 8,
            "max": 20
          }
        }
      }
    }
  },
  "token": {
    "meta": {
      "name": "Gerar Token",
      "icon": "token"
    },
    "inputs": {
      "email": {
        "name": "email",
        "type": "email",
        "id": "email",
        "label": "E-mail",
        "placeholder": "Email para receber o token",
        "rules": {
          "required": "true",
          "pattern": "/[^@]+@[^\\.]+\\..+/g"
        }
      }
    }
  }
}